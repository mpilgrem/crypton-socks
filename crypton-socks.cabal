      base >=3 && <5
    , bytestring
    , cereal >=0.3.1
    , network >=2.6
  default-language: Haskell2010

executable crypton-socks-example
  main-is: Example.hs
  hs-source-dirs:
      example
  ghc-options: -Wall
  build-depends:
      base >=3 && <5
    , bytestring
    , crypton-socks
  default-language: Haskell2010
  if !flag(example)
    buildable: False
  if flag(network-3-0-0-0)
